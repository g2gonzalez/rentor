<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
		  	<ul>
		  		<% @user.errors.full_messages.each do |msg| %>
		    			<li><%= msg %></li>
		  		<% end %>
		  	</ul>
		</div>
	<% end %>

	Name: <br>
	<%= f.text_field :name %><br><br>
