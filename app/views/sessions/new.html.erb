<div class="jumbotron">
	<div class="container">
		<h1 class="text-center">Login</h1>
	</div>
</div>

<div class="row">
	<div class="col-md-6 .col-sm-6 .col-xs-6 col-md-offset-3">
		<%= form_tag '/login' do %>

			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
				<%= text_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
			</div>
			<br>
		  	<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span></span>
				<%= password_field_tag :password, nil, placeholder:"Password", class: "form-control" %>
			</div>
			<br>
			<div class="form-group">
		  		<%= submit_tag "Login", class: "btn btn-primary" %>
		  	</div>
		<% end %>
	</div>
</div>
