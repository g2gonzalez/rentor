<h1><%= @message %></h1>
<% @locations.each do |loc| %>
<ul>
  <li><%= loc.apt_name %></li>
  <li><%= loc.address %></li>
  <li><%= loc.city %></li>
</ul>
<% end %>

<%= form_for @location do |f| %>

<%= f.label :apt_name %>
<%= f.text_field :apt_name%>
<br><br>
<%= f.label :address %>
<%= f.text_field :address%>
<br><br>
<%= f.label :city %>
<%= f.text_field :city%>
<br><br>
<%= f.label :state %>
<%= f.text_field :state%>
<br><br>
<%= f.label :zip %>
<%= f.number_field :zip %>
<br><br>
<%= f.submit 'submit' %>
<% end %>
